{
    "compilerOptions": {
        "target": "es6",
        "module": "NodeNext",
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "rootDir": "./",
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
    }
}